


#!/bin/bash

echo "Please Enter your name : "
read name

echo "Hi $name ... "
echo "Tell me your Salary to calculate TAX : "

read sal

if [ $sal -lt 20000 ]
then
   echo "No need to pay any TAX"

elif [ $sal -gt 20000 -a $sal -lt 40000 ]
then
   echo "you have to pay Indian Government 5% TAX"


elif [ $sal == 20000 ]
then
   echo "you have to pay Indian Government 2% TAX"


else
   echo "you have to pay Indian Government 10% TAX"
fi


echo "So, you hava to pay tax to Indian Government..."
echo "Thanks for using me..."


